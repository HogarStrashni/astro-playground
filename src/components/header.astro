---
import Typography from "@components/typography.astro";
import Underline from "@components/underline.astro";

const navLinks = [
  { title: "Home", href: "/" },
  { title: "About", href: "/about/" },
  { title: "Contact", href: "/contact/" },
  { title: "Empty", href: "/empty/" },
  { title: "Posts", href: "/posts/" },
];
---

<header
  class="flex h-16 min-h-16 items-center justify-between border-b px-4 sm:h-20 sm:min-h-20"
>
  <nav class="flex space-x-4 sm:space-x-12">
    {
      navLinks.map((navLink) => {
        const { title, href } = navLink;
        return (
          <a {href} class="mt-1">
            <Typography tag="span" class="sm:text-xl">
              {title}
            </Typography>
            <Underline {href} />
          </a>
        );
      })
    }
  </nav>
  <p class="hidden text-sm italic md:block md:text-xl">ASTRO-PLAYGROUND</p>
</header>
