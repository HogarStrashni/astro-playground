---
import MainLayout from "../layouts/main-layout.astro";
import Typography from "../components/typography.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<MainLayout {title} class="space-y-8">
  <Typography tag="h1" class="text-center text-2xl sm:text-6xl">
    <slot name="title" />
  </Typography>
  <Typography tag="p" class="text-center italic">
    <slot name="content" />
  </Typography>
  <slot />
</MainLayout>
